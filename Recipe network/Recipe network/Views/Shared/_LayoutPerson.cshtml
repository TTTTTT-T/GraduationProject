
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>个人中心</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @using Recipe_network.Models
        <link href="~/css/style.css" rel="stylesheet" />
    <link href="~/css/colors/green.css" rel="stylesheet" />
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/lanrenzhijia.css" rel="stylesheet" />
    <style>
        .bi {
            position: relative;
            left: 100px;
            top: 0;
        }
    </style>
</head>
<body>
    <div class="page">
        <section class="demo">
            <div class="admin-panel clearfix">
                <div class="slidebar">

                    <div class="logo">
                        <a href="">

                            @{
                                UserInfo user = (UserInfo)Session["UID"];
                            }
                            <img src="~/images/@user.userpic" style="height:100px;margin-left:30px" />
                            @*<img src="~/Content/images/user.jpg" width="100" style="border-radius:50%;padding-bottom:10px;" />*@
                        </a>
                       
                    </div>
                  
                    <ul>
                        @*<li><a href="#content" id="targeted"></a></li>*@
                        <li>


                            <a href="/UserInfo/userInfo">
                                个人资料
                                <svg width="1.5em" height="2em" viewBox="0 0 16 16" class="bi bi-file-person" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                    <path fill-rule="evenodd" d="M4 1h8a2 2 0 0 1 2 2v10a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V3a2 2 0 0 1 2-2zm0 1a1 1 0 0 0-1 1v10a1 1 0 0 0 1 1h8a1 1 0 0 0 1-1V3a1 1 0 0 0-1-1H4z" />
                                    <path d="M13.784 14c-.497-1.27-1.988-3-5.784-3s-5.287 1.73-5.784 3h11.568z" />
                                    <path fill-rule="evenodd" d="M8 10a3 3 0 1 0 0-6 3 3 0 0 0 0 6z" />
                                </svg>
                            </a>
                        </li>
                        <li>
                            <a href="/UserInfo/shows">
                                我的菜谱
                                <svg width="1.5em" height="2em" viewBox="0 0 16 16" class="bi bi-heart" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                    <path fill-rule="evenodd" d="M8 2.748l-.717-.737C5.6.281 2.514.878 1.4 3.053c-.523 1.023-.641 2.5.314 4.385.92 1.815 2.834 3.989 6.286 6.357 3.452-2.368 5.365-4.542 6.286-6.357.955-1.886.838-3.362.314-4.385C13.486.878 10.4.28 8.717 2.01L8 2.748zM8 15C-7.333 4.868 3.279-3.04 7.824 1.143c.06.055.119.112.176.171a3.12 3.12 0 0 1 .176-.17C12.72-3.042 23.333 4.867 8 15z" />
                                </svg>
                            </a>
                        </li>

                        <li>
                            
                            
                        </li>



                        <li>
                            <a href="/RecipeHome/Index">
                                返回首页
                            </a>
                        </li>
                    </ul>
                </div>
                <div id="content" class="main" style="overflow:auto">
                    @RenderBody()
                </div>
            </div>

        </section>

    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
