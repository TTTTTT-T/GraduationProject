
@{
    Layout = null;
}

<!DOCTYPE html>
<html>  

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <title>登录 </title>
    <link rel="shortcut icon" href="img/favicon.ico" type="image/x-icon" />

    <link href="~/css/layui.css" rel="stylesheet" />
    <link href="~/css/login.css" rel="stylesheet" />
</head>

<body>
    <div class="layui-carousel video_mask" id="login_carousel">
        <div carousel-item>
            <div class="carousel_div1"></div>
            <div class="carousel_div2"></div>
            <div class="carousel_div3"></div>
        </div>
        <div class="login layui-anim layui-anim-up">
            <div class="layui-logo">
                <a href="#" target="_blank"><img src="" /></a>
            </div>
            <fieldset class="layui-elem-field layui-field-title">
                <legend class="text-white">吃货网登录</legend>
            </fieldset>
            <form class="layui-form" action="/Login/Index" method="post">
                <div class="layui-form-item">
                    <input type="text" id="account" lay-verify="required|account" maxlength="20" placeholder="请输入手机号" autocomplete="off" autofocus="autofocus" class="layui-input" name="Account">
                </div>
                <div class="layui-form-item">
                    <input type="password" id="password" lay-verify="required" maxlength="20" placeholder="请输入密码" autocomplete="off" class="layui-input" name="Password">
                </div>
                <!--<div class="layui-form-item form_code">
                    <input type="text" id="code" lay-verify="required|code" maxlength="6" placeholder="请输入验证码" autocomplete="off" class="layui-input">
                    <div class="code"><img id="refCode_login_img" width="118" height="38"></div>
                </div>-->

                <button class="login_btn layui-btn layui-btn-radius layui-btn-normal"  type="submit">登录</button>
                <strong class="text-white">还没有账号？ <a href="/Login/regist" style="color: cornflowerblue;">立即注册&raquo;</a></strong>
            </form>
            <hr class="layui-bg-gray">
            <div class="layui-footer text-white">
                <!-- 底部固定区域 -->
                &copy;
            </div>
        </div>
    </div>
    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/layui.all.js"></script>
    <script src="~/js/login.js"></script>
</body>

</html>